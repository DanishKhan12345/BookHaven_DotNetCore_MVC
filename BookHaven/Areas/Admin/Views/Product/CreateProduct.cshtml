@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <div class="row mb-3 p-1">
                    <label asp-for="Title" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="Title" class="col-6 border-light-subtle" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="Description" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="Description" class="col-6 border-light-subtle " />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="ISBN" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="ISBN" class="col-6 border-light-subtle" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="Author" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="Author" class="col-6 border-light-subtle " />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="ListPrice" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="ListPrice" class="col-6 border-light-subtle" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="Price" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="Price" class="col-6 border-light-subtle " />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="Price50" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="Price50" class="col-6 border-light-subtle" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="Price100" class="col-6 border-0 shadow text-center"></label>
                    <input asp-for="Price100" class="col-6 border-light-subtle " />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row mb-3 p-1">
                    <label asp-for="CategoryId" class="col-6 border-0 shadow text-center"/>Category</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="col-6 border-dark-subtle">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>


                <div class="row col-12 justify-content-center">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to Prodcuts</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @* partial view for validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}