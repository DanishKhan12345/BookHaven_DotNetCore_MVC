@model List<Product>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-6 text-end">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                        <i class="fa-solid fa-circle-plus"></i> Add New Product</i>
                    </a>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.OrderBy(c => c.Price)) //Display records by sorting them
                    {
                        <tr>
                            <td>@product.Title</td>
                            <td>@product.Description</td>
                            <td>@product.Author</td>
                            @* <td>@product.Category</td> *@
                            <td>@product.Price</td>
                            <td>
                                <div class="row col-8">
                                    <div class="col-4">
                                        <div class="w-75 btn-group" role="group">
                                            <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="w-75 btn-group" role="group">
                                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.Id"><i class="fa-solid fa-trash"></i></a>
                                        </div>
                                    </div>
                                </div>

                            </td>
                            @* <td>

                        </td> *@
                        </tr>
                    }

                </tbody>


            </table>
        </div>
    </div>
</div>