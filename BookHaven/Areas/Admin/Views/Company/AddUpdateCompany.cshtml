@model Company

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id !=0?"Update":"Create") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class="row mb-3 p-1">
                            <label asp-for="Name" class="col-6 border-0 shadow text-center"></label>
                            <input asp-for="Name" class="col-6 border-light-subtle" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="PhoneNumber" class="col-6 border-0 shadow text-center"></label>
                            <input asp-for="PhoneNumber" class="col-6 border-light-subtle" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="StreetAddress" class="col-6 border-0 shadow text-center"></label>
                            <input asp-for="StreetAddress" class="col-6 border-light-subtle" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="City" class="col-6 border-0 shadow text-center"></label>
                            <input asp-for="City" class="col-6 border-light-subtle" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="State" class="col-6 border-0 shadow text-center"></label>
                            <input asp-for="State" class="col-6 border-light-subtle " />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="PostalCode" class="col-6 border-0 shadow text-center"></label>
                            <input asp-for="PostalCode" class="col-6 border-light-subtle" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        
                        <div class="row col-12 justify-content-center">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Save</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-secondary border form-control">Back to Companies</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @* partial view for validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}