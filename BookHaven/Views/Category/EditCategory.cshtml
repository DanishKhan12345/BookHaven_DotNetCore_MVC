@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row mb-3 p-1">
                    <label asp-for="Name" class="col-6 p-0 text-center"></label>
                    <input asp-for="Name" class="col-6 border-light-subtle" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row mb-3 p-1">
                    <label asp-for="DisplayOrder" class="col-6 p-0 text-center"></label>
                    <input asp-for="DisplayOrder" class="col-6 border-light-subtle" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row col-12 justify-content-center">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to Category</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @* partial view for validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}